    <visual>
      <geometry>
        <mesh filename="package://moveit_resources_panda_description/meshes/collision/link7.stl" />
      </geometry>
    </visual>
    <collision>
      <geometry>
        <mesh filename="package://moveit_resources_panda_description/meshes/collision/link7.stl" />
