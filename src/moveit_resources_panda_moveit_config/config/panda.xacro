      <geometry>
        <mesh filename="package://moveit_resources_panda_description/meshes/collision/link4.stl" />
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="1.0"/>
