    </actuator>
  </transmission>

  <!-- Gazebo plugin for ROS 2 control -->
  <gazebo>
    <plugin name="gazebo_ros2_control" filename="libgazebo_ros2_control.so">
      <parameters>$(find moveit_resources_panda_moveit_config)/config/ros2_controllers.yaml</parameters>
    </plugin>
  </gazebo>

</robot>