    <origin rpy="1.57079632679 0 0" xyz="0.0825 0 0" />
    <parent link="panda_link3" />
    <child link="panda_link4" />
    <axis xyz="0 0 1" />
    <limit effort="87" lower="-3.1416" upper="0.0873" velocity="2.3925" />
  </joint>

  <!-- Link 5 -->
  <link name="panda_link5">
